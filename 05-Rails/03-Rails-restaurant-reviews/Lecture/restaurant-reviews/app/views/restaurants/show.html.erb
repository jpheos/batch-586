<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Stars:</strong>
  <%= @restaurant.stars %>
</p>

<%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
<%= link_to 'Back', restaurants_path %>


<h2>Reviews</h2>

<ul>
  <% @restaurant.reviews.each do |review| %>
    <li><%= review.content %> <%= link_to "supprimer", review_path(review), method: :delete %></li>
  <% end %>
  <li><%= link_to "Ajouter votre review", new_restaurant_review_path(@restaurant) %></li>
</ul>
