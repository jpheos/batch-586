<h1>PlantTags#new</h1>

<%= simple_form_for([@plant, @plant_tag]) do |f| %>
  <% ids = @plant.tags.ids %>
  <%= f.association :tag, include_blank: false, collection: Tag.where.not(id: ids), input_html: { multiple: true,  class: 'multiple-select' }, include_hidden: false %>
  <%= f.submit "ajouter", class: 'btn btn-primary' %>
<% end %>
